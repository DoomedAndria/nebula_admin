{% extends "layouts/base.jinja2" %}

{% block title %} 500 {% endblock %}

{% block content %}
<div class="container-fluid pt-4 px-4">
    <div class="row vh-100 bg-light rounded align-items-center justify-content-center mx-0">
        <div class="col-md-6 text-center p-4">
            <i class="bi bi-bug display-1 text-warning"></i>
            <h1 class="display-1 fw-bold">500</h1>
            <h1 class="mb-4">Internal Server Error</h1>
            <p class="mb-4">Oops! Something went wrong on our end.
                Our team has been notified and we're working on fixing it.</p>
            <a class="btn btn-primary rounded-pill py-3 px-5" href="{{ url_for('main.index') }}">Go Back To Home</a>
        </div>
    </div>
</div>
{% endblock %}